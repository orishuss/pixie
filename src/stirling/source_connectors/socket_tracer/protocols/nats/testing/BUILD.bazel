load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("//bazel:go_image_alias.bzl", "go_image")

go_binary(
    name = "nats_test_client",
    embed = [":testing_lib"],
    visibility = ["//visibility:public"],
)

go_image(
    name = "nats_test_client_image",
    binary = ":nats_test_client",
)

container_image(
    name = "nats_test_client_with_ca_image",
    base = ":nats_test_client_image",
    layers = [
        "//src/stirling/source_connectors/socket_tracer/testing/containers/ssl:ssl_keys_layer",
    ],
    visibility = ["//src/stirling/source_connectors/socket_tracer/testing:__pkg__"],
)

go_library(
    name = "testing_lib",
    srcs = ["nats_test_client.go"],
    importpath = "px.dev/pixie/src/stirling/source_connectors/socket_tracer/protocols/nats/testing",
    visibility = ["//visibility:private"],
    deps = ["@com_github_nats_io_nats_go//:nats_go"],
)

load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("//bazel:go_image_alias.bzl", "go_image")

package(default_visibility = ["//src/stirling:__subpackages__"])

go_library(
    name = "client_lib",
    srcs = ["https_client.go"],
    importpath = "px.dev/pixie/src/stirling/testing/demo_apps/go_https/client",
    deps = [
        "@com_github_spf13_pflag//:pflag",
        "@com_github_spf13_viper//:viper",
        "@org_golang_x_net//http2",
    ],
)

go_image(
    name = "golang_1_16_https_client",
    embed = [":client_lib"],
    goarch = "amd64",
    goos = "linux",
    gosdk = "@go_sdk_1_16//:go_sdk",
)

go_image(
    name = "golang_1_17_https_client",
    embed = [":client_lib"],
    goarch = "amd64",
    goos = "linux",
    gosdk = "@go_sdk_1_17//:go_sdk",
)

go_binary(
    name = "client",
    embed = [":client_lib"],
)

go_image(
    name = "golang_1_18_https_client",
    binary = ":client",
)
